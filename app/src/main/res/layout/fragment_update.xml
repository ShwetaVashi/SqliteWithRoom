<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".fragments.update.UpdateFragment">

    <EditText
        android:id="@+id/etUpdateFname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter First Name"
        app:layout_constraintBottom_toTopOf="@id/etUpdateLname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etUpdateLname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter Last Name"
        app:layout_constraintBottom_toTopOf="@id/btnUpdate"
        app:layout_constraintEnd_toEndOf="@+id/etUpdateFname"
        app:layout_constraintStart_toStartOf="@+id/etUpdateFname"
        app:layout_constraintTop_toBottomOf="@id/etUpdateFname" />

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/etUpdateLname"
        app:layout_constraintStart_toStartOf="@+id/etUpdateLname"
        app:layout_constraintTop_toBottomOf="@+id/etUpdateLname" />

</androidx.constraintlayout.widget.ConstraintLayout>